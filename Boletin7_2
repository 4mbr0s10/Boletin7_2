package boletin7_2;

import javax.swing.JOptionPane;

/**
 *
 * @author dam1
 */
public class Boletin7_2 {

    public static void main(String[] args) {
        short num1, num2;

        String auxNum1 = JOptionPane.showInputDialog("Introduzca un número: ");
        num1 = Short.parseShort(auxNum1);
        String auxNum2 = JOptionPane.showInputDialog("Introduzca otro número: ");
        num2 = Short.parseShort(auxNum2);
        if (num1 >= num2) {
            JOptionPane.showMessageDialog(null, "La resta de los dos números es: " + (num1 - num2));

        }

        JOptionPane.showMessageDialog(null, "O resultado da suma é: " + (num1 + num2));

    }

}
